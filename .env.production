# Production Environment Configuration
# Copy this to .env and fill in your values

# ============================================================
# FLASK CONFIGURATION
# ============================================================

FLASK_ENV=production
DEBUG_MODE=false

# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG

# ============================================================
# SERVER CONFIGURATION
# ============================================================

SERVER_HOST=0.0.0.0
SERVER_PORT=5001

# ============================================================
# REDIS CONFIGURATION
# ============================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================
# RUNPOD CONFIGURATION (GPU Processing)
# ============================================================

# Get from: https://www.runpod.io/console/user/settings
RUNPOD_API_KEY=

# Get from: RunPod Dashboard → Serverless → Your Endpoint
RUNPOD_ENDPOINT_ID=

# Force RunPod usage (true/false)
# Set to true to always use RunPod instead of local GPU
FORCE_RUNPOD=true

# ============================================================
# STORAGE CONFIGURATION
# ============================================================

# Storage backend: 'local' or 'spaces'
STORAGE_BACKEND=local

# Local storage paths (absolute paths recommended for production)
OUTPUT_FOLDER=/var/www/app/outputs
UPLOAD_FOLDER=/var/www/app/uploads

# ============================================================
# DIGITALOCEAN SPACES (Optional - for cloud storage)
# ============================================================

# Get from: DigitalOcean → API → Spaces Keys
DO_SPACE_NAME=
DO_REGION=nyc3
DO_ACCESS_KEY=
DO_SECRET_KEY=

# ============================================================
# PROCESSING CONFIGURATION
# ============================================================

# PDF to image conversion quality (72-600)
PDF_DPI=200

# OCR batch size (1-100)
# Higher = faster but more memory
OCR_BATCH_SIZE=24

# Maximum concurrent jobs
MAX_CONCURRENT_JOBS=3

# Tile configuration for OCR
TILE_SIZE=1000
TILE_OVERLAP=250

# ============================================================
# AUTHENTICATION (Optional)
# ============================================================

# Enable user authentication (true/false)
ENABLE_AUTH=false

# Session security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ============================================================
# MONITORING & LOGGING
# ============================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================
# SECURITY
# ============================================================

# Maximum file upload size (in bytes)
# 50MB = 52428800
MAX_FILE_SIZE=52428800

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=pdf

# ============================================================
# NOTES
# ============================================================

# 1. Never commit this file to version control
# 2. Keep SECRET_KEY secure and random
# 3. Use strong passwords for Redis if exposed
# 4. Enable HTTPS in production (use Certbot)
# 5. Set SESSION_COOKIE_SECURE=true when using HTTPS
# 6. Monitor RunPod costs regularly
# 7. Setup automated backups for important data

