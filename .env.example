# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG_MODE=true

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# Redis Configuration (for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# RunPod Configuration (GPU Processing)
RUNPOD_API_KEY=
RUNPOD_ENDPOINT_ID=
FORCE_RUNPOD=false

# Storage Configuration
STORAGE_BACKEND=local  # Options: 'local' or 'spaces'
OUTPUT_FOLDER=./outputs
UPLOAD_FOLDER=./uploads

# DigitalOcean Spaces (Optional)
DO_SPACE_NAME=
DO_REGION=nyc3
DO_ACCESS_KEY=
DO_SECRET_KEY=

# Processing Configuration
PDF_DPI=200
OCR_BATCH_SIZE=24
MAX_CONCURRENT_JOBS=3
TILE_SIZE=1000
TILE_OVERLAP=250

# Authentication (for production)
ENABLE_AUTH=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=INFO
LOG_FILE=./server.log

